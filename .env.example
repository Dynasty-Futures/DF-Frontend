# =============================================================================
# Dynasty Futures Frontend - Environment Variables Reference
# =============================================================================
# Copy this to .env.local for personal overrides.
# See .env, .env.development, and .env.production for defaults.
#
# Vite loading order (later overrides earlier):
#   .env -> .env.local -> .env.[mode] -> .env.[mode].local
# =============================================================================

# Backend API URL
# - Development: leave empty (Vite proxy handles it)
# - Production: https://api.dynastyfuturesdyn.com
VITE_API_URL=

# API version prefix
VITE_API_VERSION=v1

# Use mock data instead of real API
VITE_USE_MOCK_DATA=false

# Enable debug logging in the browser console
VITE_DEBUG_MODE=true

# Application name
VITE_APP_NAME=Dynasty Futures

# Support email
VITE_SUPPORT_EMAIL=support@dynastyfuturesdyn.com

# Google OAuth Client ID (get from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=
